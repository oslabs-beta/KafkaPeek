{
    "root": true,
    "ignorePatterns": ["**/util"],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "eslint:recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["warn", 2],
        "no-unused-vars": ["off", { "vars": "local" }],
        "prefer-const": "warn",
        "quotes": ["warn", "single"],
        "semi": ["warn", "always"],
        "space-infix-ops": "warn",
        "react/prefer-stateless-function": "off",
        "react/prop-types": "off",
        "react/jsx-key": "warn"
    },
    "settings": {
        "react": {
          "version": "detect"
        }
    }
}
